<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_btn_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_bottom_navigation_home"
            style="@style/HomeActivity_style"
            android:checked="true"
            android:drawableTop="@drawable/selector_home"
            android:text="@string/main_home" />

        <RadioButton
            android:id="@+id/rb_bottom_navigation_thinktank"
            style="@style/HomeActivity_style"
            android:drawableTop="@drawable/selector_thinktank"
            android:text="@string/main_thinktank" />

        <RadioButton
            android:id="@+id/rb_bottom_navigation_questions"
            style="@style/HomeActivity_style"
            android:drawableTop="@drawable/selector_questions"
            android:text="@string/main_quetions" />

        <RadioButton
            android:id="@+id/rb_bottom_navigation_exchange"
            style="@style/HomeActivity_style"
            android:drawableTop="@drawable/selector_exchange"
            android:text="@string/main_exchange" />

        <RadioButton
            android:id="@+id/rb_bottom_navigation_mine"
            style="@style/HomeActivity_style"
            android:drawableTop="@drawable/selector_mine"
            android:text="@string/main_me" />
    </RadioGroup>

</LinearLayout>