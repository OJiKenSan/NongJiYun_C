<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.nongjiyun.Activity.PushActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_push_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="返回"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phne_validate_title"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="发布"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="290dp">
        <EditText
            android:paddingTop="30dp"
             android:paddingLeft="30dp"
            android:gravity="left|top"
            android:maxLength="600"
            android:hint="请输入内容（600字内）"
            android:id="@+id/et_push_context"
            android:layout_margin="5dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="220dp" />
        <Button
            android:id="@+id/btn_push_locate"
            android:paddingLeft="15dp"
            android:textColor="#999"
            android:background="#fff"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="点击定位地址"
            android:drawableLeft="@drawable/icon_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000"
        android:text="上传图片或15秒微视频（最多9张图片）
 发布的信息可在列表中长按删除或撤销 "
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
<Button
    android:layout_marginLeft="10dp"
   android:background="@drawable/btn_photo_pressed"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent" />
        <Button
            android:layout_marginLeft="10dp"
           android:background="@drawable/btn_video_pressed"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_push_commit"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="提交"
        android:textSize="18dp"
        android:background="@drawable/btn_enter_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
