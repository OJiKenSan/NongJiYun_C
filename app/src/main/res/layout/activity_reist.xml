<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ReistActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_phone_reist_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="返回"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phne_validate_title"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="用户注册"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/me_login_head_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:src="@drawable/icon_default_head" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="用   户   名"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_phone_userreiste_name"
            android:hint="姓名"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:paddingRight="30dp"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="手        机"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_phone_userreister_phone"
            android:hint="手机号码"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:paddingRight="30dp"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="密        码"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_phone_userreiste_password"
            android:hint="密码"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:paddingRight="30dp"

            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="确认密码"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_phone_userreiste_password_again"
            android:hint="再次输入密码"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:paddingRight="30dp"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_phone_userreister_type"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="人员类别"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_phone_userreister_type"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="选择类型"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_phone_userreister_place"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="选择地区"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_phone_userreister_place"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="点击选择地址"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_phone_userreister_next"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="下一步"
        android:textSize="18dp"
        android:background="@drawable/btn_enter_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>