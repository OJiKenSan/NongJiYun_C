<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.nongjiyun.Activity.InstallActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_install_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="返回"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="系统设置"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:text="客服热线"
            android:id="@+id/tv_install_phone"
            android:gravity="left|center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_install_phones"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:text="025-86261287"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/tv_install_clear"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:text="清理缓存"
            android:gravity="left|center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_install_clears"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:text="当前版本"
            android:gravity="left|center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_install_verson"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/tv_install_about"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:text="关于"
            android:gravity="left|center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_install_about_us"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_phone_validate_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_enter_rectangle"
        android:text="退出"
        android:textColor="#fff"
        android:textSize="18dp" />
</LinearLayout>
