<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity_resetpassword">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_phone_validate_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="返回"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phne_validate_title"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="重设密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="登录密码"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_phone_reset_input_passsword"
            android:hint="请输入密码"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:paddingBottom="20dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textColor="#000000"
            android:drawablePadding="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="密码确认"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_phone_reset_commit_passsword"
            android:hint="再次输入密码"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:paddingBottom="20dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_phone_reset_password_next"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="下一步"
        android:textSize="18dp"
        android:background="@drawable/btn_enter_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>