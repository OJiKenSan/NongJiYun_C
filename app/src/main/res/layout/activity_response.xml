<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.ResponseActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_share_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="返回"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
android:text="意见反馈"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint="请输入反馈内容"
        android:id="@+id/et_share_input"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <Button
        android:id="@+id/btn_share_commit"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="提交"
        android:textSize="18dp"
        android:background="@drawable/btn_enter_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>