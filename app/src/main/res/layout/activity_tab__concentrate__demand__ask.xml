<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.nongjiyun.Activity.Tab_Concentrate_Demand_AskActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_background_color"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button

            android:id="@+id/btn_c_d_a_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:gravity="center"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_c_d_a_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="10dp"
           android:background="#fff">
           <Button
               android:id="@+id/btn_tab_left"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/selector_tab"
               android:textSize="20sp" />
           <Button
               android:id="@+id/btn_tab_right"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/selector_tab"
               android:textSize="20sp" />
       </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_tab_c_d_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
