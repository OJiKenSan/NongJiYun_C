<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.nongjiyun.Activity.EditProfileActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_marginRight="7dp"
            android:id="@+id/btn_editprofile_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/btn_back_normal"
            android:text="返回"
            android:background="@color/title_background_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_phne_validate_title"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="我的资料"

            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button

            android:id="@+id/btn_exchange_push"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="保存"
            android:background="@color/title_background_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="行业类别"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button

            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="可多选（点击删除）"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:onClick="head"
            android:id="@+id/tv_editprofe_head"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:gravity="left|center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="头像"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_editprofe_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:riv_border_color="#333333"
            app:riv_border_width="2dp"
            app:riv_oval="true" />
        <Button
            android:textSize="18dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_profile_name"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="用户名"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_profile_name"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="王子轩"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
             android:id="@+id/tv_editprofile_companyName"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="单位名称"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_editprofile_companyName"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"

            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_editprofile_identity"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="身份"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_editprofile_identity"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="农技推广人员"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_editprofile_education"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="学历"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button

            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:id="@+id/btn_editprofile_education"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_phone_userreister_place"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="地址"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_phone_userreister_place"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="南京市"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_editprofile_sex"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="性别"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button

            android:id="@+id/btn_editprofile_sex"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="男"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="手机号码"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button

            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:text="13951016728"
            android:layout_marginRight="10dp"

            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_editprofile_email"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="邮箱"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button

            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:layout_gravity="center"
            android:textColor="#999"
            android:id="@+id/btn_editprofile_email"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/btn_into_normal"
            android:background="#fff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
