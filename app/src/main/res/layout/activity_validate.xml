<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".Activity.Activity_validate">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/title_background_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_phone_validate_back"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="返回"
            android:background="@color/title_background_color"
            android:drawableLeft="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phne_validate_title"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="注册"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#9999"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_phone_validate_phonenum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawablePadding="10dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="18dp" />
        <Button
            android:clickable="true"
            android:id="@+id/btn_phone_validate_getCode"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_enter_rectangle"
            android:textColor="#fff"
            android:text="获取验证码"
            android:layout_width="80dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_phone_validate_code"
        android:background="#fff"
        android:drawablePadding="10dp"
        android:hint="请输入验证码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="16dp"
        android:textColor="#999"
        android:textColorHint="#999"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <Button
        android:id="@+id/btn_phone_validate_next"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="下一步"
        android:textSize="18dp"
        android:background="@drawable/btn_enter_rectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>